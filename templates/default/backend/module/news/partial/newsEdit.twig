<div class="news-edit">
    {% if newsEdit %}
        <h2>Bearbeite diese News</h2>

        <form action="{{ route('newsEditSubmit') }}" method="post">
            <div>
                <label for="title">Titel: <br>
                    <input type="text" name="title" required value="{{ newsEdit.getTitle }}">
                </label>
            </div>

            <div>
                <label for="text">News: <br>
                    <textarea name="text" cols="30" rows="10">{{ newsEdit.getText }}</textarea>
                </label>
            </div>

            <div class="hidden-fields">
                <input type="hidden" name="userId" value="{{ loggedInUser.getUserId }}">
                <input type="hidden" name="newsId" value="{{ newsEdit.getNewsId }}">
            </div>

            <div>
                <input type="submit" name="submit" value="Bearbeiten">
            </div>
        </form>
    {% else %}
        <p>Es ist ein Fehler aufgetreten. Bitte versuch es erneut.</p>
    {% endif %}
</div>